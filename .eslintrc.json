{
    "extends": ["next"],
    "plugins": ["short-classnames", "prettier"],

    "rules": {
        "react/no-children-prop": "off",
        "prettier/prettier": "warn",
        "react/jsx-no-target-blank": "off",
        "short-classnames/short-classnames": [
            "warn",
            {
                "maxClassNameCharacters": 60,
                "functionName": "cs"
            }
        ]
    }
}
