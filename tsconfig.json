{
    "compilerOptions": {
        "target": "ES2015",
        "module": "commonjs",
        // "rootDir": "src",
        "allowJs": true,
        "moduleResolution": "Node",
        "lib": [
            "es2017",
            "es7",
            "es6", //
            "dom"
        ],
        "declaration": true,
        "declarationMap": true,
        "strict": true,
        "noEmit": false,
        "outDir": "dist",
        "downlevelIteration": true,

        "esModuleInterop": true,
        "noImplicitAny": false,
        "sourceMap": true,
        "jsx": "react-jsx",
        "composite": true,
        "skipLibCheck": true
    },
    "include": ["src", "landing.ts", "dashboard.ts", "colors.cjs", "colors.js"],
    "exclude": ["**/node_modules", "**/.*"]
}
